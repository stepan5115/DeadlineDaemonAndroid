<!-- res/drawable/item_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Цвет фона (если нужен) -->
    <solid android:color="@android:color/white" />

    <!-- Рамка (граница) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- Серый цвет рамки -->

    <!-- Скругление углов (опционально) -->
    <corners android:radius="8dp" />

    <!-- Отступы внутри рамки (опционально) -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
</shape>